<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ni.edu.uca.blooming" >

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/blooming_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blooming_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Blooming"
        tools:targetApi="31" >
        <activity
            android:name=".PrivacyActivity"
            android:exported="false" />
        <activity
            android:name=".TerminosyCondiciones"
            android:exported="false" />
        <activity
            android:name=".HelpActivity"
            android:exported="false" />
        <activity
            android:name=".UsabilityActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>